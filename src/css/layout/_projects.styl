.projects
  background #000
  font-size 0
  height 100%
  max-width 85%
  position fixed
  top 0
  left 0
  overflow-x hidden
  overflow-y auto
  transform translateX(-100%)
  z-index 3

  &::-webkit-scrollbar
    width 3px

  &::-webkit-scrollbar-track
    background #000

  &::-webkit-scrollbar-thumb
    background #fff



.projects-list
  margin 0
  padding 20px

.projects-item
  display block

  &:not(:first-child)
    margin-top 20px

.projects-link
  border 1px solid #313131
  display inline-block
  filter grayscale(100%)
  position relative
  transition filter .4s

  &:hover
    filter grayscale(0%)



.projects-img
  display block
  width 100%

.projects-square
  display block
  bottom 10px
  left 10px
  overflow hidden
  position absolute
  right 10px
  top 10px

.projects-square-top,
.projects-square-right,
.projects-square-bottom,
.projects-square-left
  background rgba(#fff, 0.2)
  position absolute

.projects-square-top,
.projects-square-bottom
  left 0
  height 1px
  width 100%

.projects-square-right,
.projects-square-left
  top 0
  height 100%
  width 1px

.projects-square-top
  top 0
  transform translateX(100%)

.projects-square-right
  right 0
  transform translateY(100%)

.projects-square-bottom
  bottom 0
  transform translateX(-100%)

.projects-square-left
  left 0
  transform translateY(-100%)



.projects-info
  left 50%
  overflow hidden
  position absolute
  text-align center
  top 50%
  transform translate(-50%, -50%)
  white-space nowrap

.projects-title
  display block
  color #fff
  font-size 15px
  font-weight 200
  letter-spacing 3px
  margin-right -3px
  padding 5px 10px
  position relative
  text-transform uppercase

.projects-hover
  background #fff
  color #fff
  display block
  left 0
  height 100%
  position absolute
  font-size 15px
  font-weight 200
  letter-spacing 3px
  padding 5px 10px
  text-transform uppercase
  top 0
  transform translateX(-100%)
  width 100%
  z-index 1
