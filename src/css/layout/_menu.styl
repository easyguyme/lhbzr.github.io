.menu
  @media (max-width 800px)
    display none

.menu-list
  list-style none
  margin 0
  padding 0

.menu-link
  border 1px solid #FFF
  border-radius 2px
  color #000
  display block
  fill #000
  font-size 10px
  font-weight bold
  letter-spacing 0.25em
  margin-right -0.25em
  overflow hidden
  padding 20px 30px
  position absolute
  text-transform uppercase
  z-index 5

.menu-bg
  background #FFF
  bottom -25px
  left -50px
  position absolute
  right -50px
  top -25px
  transform rotate(10deg) translateY(0%)
  z-index -1
