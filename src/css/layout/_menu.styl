.menu
  @media (max-width 800px)
    display none

.menu-list
  list-style none
  margin 0
  padding 0

.menu-link
  border-radius 3px
  color #FFF
  display block
  fill #FFF
  font-size 10px
  font-weight bold
  letter-spacing 0.25em
  margin-right -0.25em
  overflow hidden
  padding 20px 30px
  position absolute
  text-transform uppercase
  z-index 5

  &-top,
  &-right
  &-bottom,
  &-left
    background #FFF
    content ''
    position absolute

  &-right,
  &-left
    height 100%
    width 1px

  &-top,
  &-bottom
    height 1px
    width 100%

  &-top
    left 0
    top 0

  &-right
    right 0
    top 0

  &-left
    left 0
    top 0

  &-bottom
    bottom 0
    left 0

.menu-bg
  background #FFF
  bottom -25px
  left -50px
  position absolute
  right -50px
  top -25px
  transform rotate(10deg) translateY(-100%)
  z-index -1
