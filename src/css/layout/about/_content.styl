/**
 * Info.
 */
.about-info
  display inline-block
  max-width 730px
  text-align left

  @media (max-width: 1024px)
    max-width 515px

.about-logo
  height 130px
  left 50%
  position absolute
  stroke #FFF
  transform translateX(-50%)
  top 93px
  width 130px
  visibility hidden

  @media (max-width: 1024px)
    top 50px

.about-title
  font-weight 100
  font-size 35px
  letter-spacing: 5.25px

  @media (max-width: 1024px)
    font-size 25px
    letter-spacing 3.25px

.about-title-highlight
  border-bottom 2px solid #FFF
  display inline-block
  padding-bottom 7px

.about-desc
  font-size 17px
  letter-spacing 2.5px
  line-height 30px
  margin 20px 0

  @media (max-width: 1024px)
    font-size 14px
    line-height 27px
