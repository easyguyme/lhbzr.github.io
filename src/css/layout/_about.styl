.about
  border 1px solid #FFF
  border-radius 2px
  color #000
  height 325px
  overflow hidden
  padding 25px
  position absolute
  width 325px
  z-index 2

.about-title
  display block
  font-size 20px
  font-weight bold
  margin-bottom 15px
  margin-top 0

  @media (max-width: 400px)
    letter-spacing 2px
    margin-top 0.67em

.about-desc
  font-size 12px
  letter-spacing 1px
  line-height 24px

.about-bg
  background #FFF
  bottom -75px
  left -150px
  position absolute
  right -150px
  top -75px
  transform rotate(-10deg) translateY(0%)
  z-index -1
